<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.newgen.UI.BaseTitleLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:titleText="خەت شەكلىنى تەسىس قىلىش"></com.newgen.UI.BaseTitleLayout>

    <RelativeLayout
        android:id="@+id/img_re1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ziti_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="كىچىك خەت "
            android:contentDescription="小号字"
            android:textSize="@dimen/ziti_daxiao" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dp"
            android:background="@drawable/duigou2"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cecdcd" />

    <RelativeLayout
        android:id="@+id/img_re2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ziti_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="ئوتتۇرا نومۇرلۇق خەت "
            android:contentDescription="中号字"
            android:textSize="@dimen/ziti_daxiao" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:background="@drawable/duigou2"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cecdcd" />

    <RelativeLayout
        android:id="@+id/img_re3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ziti_height"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="چوڭ ھەرپ "
            android:contentDescription="大号字"
            android:textSize="@dimen/ziti_daxiao" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:background="@drawable/duigou2"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cecdcd" />

    <RelativeLayout

        android:id="@+id/img_re4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ziti_height"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="چوڭ نومۇرلۇق خەت"
            android:contentDescription="特大号字"
            android:textSize="@dimen/ziti_daxiao" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:background="@drawable/duigou2"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cecdcd" />


</LinearLayout>