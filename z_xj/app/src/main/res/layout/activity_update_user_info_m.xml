<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >
    
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    android:background="#FFF"	
	    >
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:contentDescription="@string/image"
            android:layout_centerVertical="true" 
            android:layout_marginLeft="8dp"
            android:src="@drawable/back_arrow" />
        
        <com.newgen.UI.MongolTextView 
            android:id="@+id/edit_user_title"
	        android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:text="@string/edit_user_m"
	        android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
	        android:textSize="18sp"
	        />
	    
	    <View 
	        android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"
            android:layout_alignParentBottom="true"
	        />
    	
    </RelativeLayout>
    
    
    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
	    
        <LinearLayout 
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:orientation="horizontal"
            >
            
            <RelativeLayout 
		        android:id="@+id/user_photo"
			    android:layout_width="60dp"
			    android:layout_height="match_parent"
			    android:orientation="vertical" 
			    android:background="#FFF"
			    android:paddingTop="8dp"
			    >
			    
                <com.newgen.UI.MongolTextView 
                    android:id="@+id/user_photo_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical|right"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            />
			    
		        <ImageView 
		            android:id="@+id/imageView1"
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/go_arrow_m"
		            android:layout_alignParentBottom="true"
		            android:layout_marginBottom="200dp"
		            android:layout_centerHorizontal="true"
		            />
		        
		        <com.newgen.UI.CircleImageView
		        	android:id="@+id/loginButton"
		        	android:layout_width="44dp"
		         	android:layout_height="44dp"
		         	android:contentDescription="@string/image"
		         	android:src="@drawable/user_login_btn"
		         	android:layout_above="@+id/imageView1"
		         	android:layout_centerHorizontal="true"
		         	/>
			    
		    </RelativeLayout>
            
            <RelativeLayout 
		        android:id="@+id/nick_name"
			    android:layout_width="60dp"
			    android:layout_height="match_parent"
			    android:background="#FFF"
			    android:layout_marginLeft="22dp"
			    android:paddingTop="8dp"
			    >
			    
                <com.newgen.UI.MongolTextView 
                    android:id="@+id/nick_name_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            />
			    
		        <ImageView 
		            android:id="@+id/imageView2"
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/go_arrow_m"
		            android:layout_alignParentBottom="true"
		            android:layout_marginBottom="200dp"
		            android:layout_centerHorizontal="true"
		            />
		        
		        <com.newgen.UI.MongolTextView 
		            android:id="@+id/nick_name_txt"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_above="@+id/imageView2"
		            />
			    
		    </RelativeLayout>
		    
            
            <RelativeLayout 
		        android:id="@+id/change_phone"
			    android:layout_width="60dp"
			    android:layout_height="match_parent"
			    android:background="#FFF"
			    android:layout_marginLeft="22dp"
			    android:paddingTop="8dp"
			    >
			    
                <com.newgen.UI.MongolTextView 
                    android:id="@+id/change_phone_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            />
			    
		        <ImageView 
		            android:id="@+id/imageView3"
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/go_arrow_m"
		            android:layout_alignParentBottom="true"
		            android:layout_marginBottom="200dp"
		            android:layout_centerHorizontal="true"
		            />
		        
		        <com.newgen.UI.MongolTextView 
		            android:id="@+id/change_phone_txt"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_above="@+id/imageView3"
		            />
			    
		    </RelativeLayout>
            
            <RelativeLayout 
		        android:id="@+id/change_password"
			    android:layout_width="60dp"
			    android:layout_height="match_parent"
			    android:background="#FFF"
			    android:layout_marginLeft="22dp"
			    android:paddingTop="8dp"
			    >
			    
                <com.newgen.UI.MongolTextView 
                    android:id="@+id/change_password_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            />
			    
		        <ImageView 
		            android:id="@+id/imageView4"
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/go_arrow_m"
		            android:layout_alignParentBottom="true"
		            android:layout_marginBottom="200dp"
		            android:layout_centerHorizontal="true"
		            />
		        
		    </RelativeLayout>
		    
            
            <RelativeLayout 
		        android:id="@+id/logout"
			    android:layout_width="60dp"
			    android:layout_height="match_parent"
			    android:background="#FFF"
			    android:layout_marginLeft="22dp"
			    android:paddingTop="8dp"
			    >
			    
                <com.newgen.UI.MongolTextView 
                    android:id="@+id/logout_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            />
			    
		        <ImageView 
		            android:id="@+id/imageView5"
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/go_arrow_m"
		            android:layout_alignParentBottom="true"
		            android:layout_marginBottom="200dp"
		            android:layout_centerHorizontal="true"
		            />
		        
		    </RelativeLayout>
            
            
        </LinearLayout>
        
    </HorizontalScrollView>

</LinearLayout>
