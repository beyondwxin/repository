<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/runImageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/runImgBlock"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <com.newgen.UI.RunImageViewPager
            android:id="@+id/image_wall_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:spacing="3dip"
            android:unselectedAlpha="1"
            android:background="@drawable/index_run_img_shape_corner"
            />

        <TextView
            android:id="@+id/txt_gallerytitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:lines="2"
            android:alpha="40"
            android:background="@drawable/index_run_img_title_shape_corner"
            android:gravity="right|center_vertical"
            android:textColor="#ffffff"
            >
        </TextView>
        
        <TextView
            android:id="@+id/txt_gallerycount"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:alpha="40"
            android:background="@drawable/index_run_img_title_shape_corner"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/gallery_point_linear"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" 
            android:visibility="gone"
            >
        </LinearLayout>
        
    </FrameLayout>

</LinearLayout>