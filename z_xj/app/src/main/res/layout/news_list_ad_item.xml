<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ad_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        >
        <TextView 
            android:id="@+id/ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1d1a1a"
            android:textSize="@dimen/news_list_title"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
		android:paddingTop="5dp"
        android:orientation="horizontal" >
        
        <com.newgen.UI.RoundImageView
            android:id="@+id/ad1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/image"
            android:background="@android:color/transparent" 
            />

        <com.newgen.UI.RoundImageView
            android:id="@+id/ad2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/image"
            android:background="@android:color/transparent" />

        <com.newgen.UI.RoundImageView
            android:id="@+id/ad3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/image"
            android:background="@android:color/transparent" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        >
        
        <TextView 
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:textColor="#aab1b3"
        	android:textSize="@dimen/news_list_degist"
            />
        
        <View 
            android:layout_width="0dp"
        	android:layout_height="15dp"
        	android:layout_weight="1"            
        	/>
        
        <TextView 
            android:id="@+id/publish_num"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:textColor="#aab1b3"
        	android:textSize="@dimen/news_list_degist"
        	android:layout_marginRight="2dp"
            />
        
        <ImageView 
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="1dp"
	        android:src="@drawable/comment_num"    
            />
        
    </LinearLayout>
    
    
    
    
