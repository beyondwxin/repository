<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:gravity="center_vertical"
	    android:background="#FFF"
	    >
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:contentDescription="@string/image"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />
        
        <com.newgen.UI.MongolTextView
            android:id="@+id/head_change_phone"
	        android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_centerInParent="true"
	        />
	    
	    <TextView 
	        android:id="@+id/save"
	        android:layout_width="26dp"
            android:layout_height="26dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
	        />
    	
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        android:orientation="vertical" >
	    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/img_background_top_radius" >

            <EditText
                android:id="@+id/newPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:hint="@string/new_phone_m"
                android:inputType="phone|number"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/img_background_center_radius" >

            <EditText
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:hint="@string/code_hint_m"
                android:textColor="#555555"
                android:textSize="14sp" />
            
            <TextView
	            android:id="@+id/get_code"
	            android:layout_width="68dp"
	            android:layout_height="26dp"
	            android:text="@string/get_code_m"
	            android:gravity="center"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/login_shape_corner_m_white"
	            />
            
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/img_background_bottom_radius" >

            <EditText
                android:id="@+id/oldPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:hint="@string/old_phone_m"
                android:inputType="phone|number"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>
        
        
        
        <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="55dp"
	        android:orientation="horizontal"
	        android:background="@drawable/login_shape_corner_m_red"
	        android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="3dp"
	        >
	        
	        <View 
	           	android:layout_width="0dp"
	           	android:layout_height="match_parent"
	           	android:layout_weight="1"
	            />
	        
	        <com.newgen.UI.MongolTextView 
		        android:id="@+id/submit"
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:paddingTop="3dp"
		    	android:paddingBottom="3dp"
		        />
	        
	        <View 
	           	android:layout_width="0dp"
	           	android:layout_height="match_parent"
	           	android:layout_weight="1"
	            />
	        
	        
	    </LinearLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
