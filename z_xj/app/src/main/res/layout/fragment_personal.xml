                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/brightness_m" />

                <ImageView
                    android:id="@+id/iv_ye_jian_mo_shi"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/tuoyuan3" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/img_1"
                    android:contentDescription="夜间模式"
                    android:text="@string/subscription"
                    tools:text="كەچلىك ھالىتى " />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_xiao_xi_tui_song"
