                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/xiao_xi_tui_song" />

                <ImageView
                    android:id="@+id/iv_xiao_xi_tui_song"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/tuoyuan3" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/img_2"
                    android:contentDescription="消息推送"
                    android:text="خەۋەر يوللاش " />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_suggestion"
                android:layout_width="match_parent"
                android:layout_height="42dp">

