<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_setting"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/image"
            android:src="@drawable/user_setting_btn" />

        <com.newgen.UI.CircleImageView
            android:id="@+id/loginButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/image"
            android:src="@drawable/user_login_btn"
            app:border_color="@color/transparent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="未登录"
            android:text="سىز تېخى تىزىملاتمىدىڭىز "
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/my_collect"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@+id/user_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/image"
            android:src="@drawable/collect_m" />

        <ImageView
            android:id="@+id/my_message"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@+id/user_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="107dp"
            android:contentDescription="@string/image"
            android:src="@drawable/message_m" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:scrollbars="none">

        <LinearLayout
